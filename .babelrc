{
  "env": {
    "development": {
      "presets": ["env", ["es2015", {"modules": false}], "react", "stage-0"],
      "plugins": [
        "transform-class-properties",
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "presets": ["es2015", "react", "stage-0"]
    },
    "test": {
      "presets": ["env", "es2015", "react", "stage-0"],
      "plugins": ["istanbul"]
    }
  }
}
